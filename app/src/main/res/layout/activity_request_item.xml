<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/textFirstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="First Name"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/viewFirstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textLastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Last Name"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/viewLastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/viewEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textRole"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Role"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/viewRole"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/viewPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textProgram"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Program of Study"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/viewProgram"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textDegree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Highest Degree"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/viewDegree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textCourses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Courses Offered"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/viewCourses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/buttonAccept"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Accept" />

        <Button
            android:id="@+id/buttonReject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reject" />
    </LinearLayout>
</androidx.cardview.widget.CardView>